isbn = {0031-9155},
issn = {13616560},
journal = {Physics in Medicine and Biology},
keywords = {image reconstruction,positron emission tomography,single photon emission computed tomography},
mendeley-groups = {PhD/Andrew Reader/Nested,PhD/Andrew Reader,MIC,PhD/MIC2020},
